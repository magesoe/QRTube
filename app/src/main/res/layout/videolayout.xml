<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".VideoActivity"
    android:background="@drawable/border"
    android:orientation="vertical">

    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/videoView"
        android:layout_alignParentTop="true"
        android:background="@drawable/blackborder"
        />


    <GridLayout
        android:id="@+id/animal_desv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blackborder_solidwhite"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="20dp"
        >


        <TextView
            android:id="@+id/txt_animal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:id="@+id/txt_animal_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal"
            android:layout_column="0"
            android:layout_row="1"
            android:maxLines="5"
            android:scrollbars="vertical"/>

    </GridLayout>

    <GridLayout
        android:id="@+id/animal_facts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blackborder_solidwhite"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="20dp">

            <TextView
                android:id="@+id/lbl_animal_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habitat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="1"
                android:paddingRight="30dp" />

            <TextView
                android:id="@+id/txt_animal_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal"
                android:layout_column="1"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/lbl_animal_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="2"
                android:paddingRight="30dp"/>

            <TextView
                android:id="@+id/txt_animal_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal"
                android:layout_column="1"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/lbl_animal_eats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/eats"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="3"
                android:paddingRight="30dp"/>

            <TextView
                android:id="@+id/txt_animal_eats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal"
                android:layout_column="1"
                android:layout_row="3"/>
    </GridLayout>


</LinearLayout>
